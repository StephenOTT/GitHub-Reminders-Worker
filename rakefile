namespace :qless do
  task :setup do
    # require_relative 'jobs' # to ensure all job classes are loaded

    # Set options via environment variables
    # The only required option is QUEUES; the
    # rest have reasonable defaults.
    ENV['REDIS_URL'] ||= 'redis://localhost:6379'
    # ENV['QUEUES'] ||= 'testing'
  end
end

namespace :qless do
  task :work do
  	require 'qless'
    require 'qless/job_reservers/ordered'
    require 'qless/worker'
    require_relative 'jobs'
    queues = %w[ testing ].map { |name| Qless::Client.new(:url => ENV['REDIS_URL']).queues[name] }
    # queues = "testing"
    job_reserver = Qless::JobReservers::Ordered.new(queues)
    worker = Qless::Workers::ForkingWorker.new(job_reserver, :num_workers => 2, :interval => 15).run
  end
end